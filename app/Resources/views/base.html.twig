<style>
    @import url('http://fonts.googleapis.com/css?family=Lato');
    body, html{
        font-family: 'Lato', sans-serif;
    }
    .container{
        display: inline-block;
        margin: auto;
        height: 250px;
        width: 400px;
        bottom: 0; left:0; right: 0; top:0;
        padding: 0;
    }
    h2 {
        color: #707070;
        font-weight: normal;
    }
    .container ul{
        /*list-style: none;*/
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
    }
    ul li{
        color: #707070;
        display: block;
        position: relative;
        float: left;
        width: 100%;
        height: 50px;
        /*border-bottom: 1px solid #111111;*/
    }
    ul li input[type=radio]{
        position: absolute;
        visibility: hidden;
    }
    ul li input[type=checkbox]{
        position: absolute;
        visibility: hidden;
    }
    ul li label{
        display: block;
        position: relative;
        font-weight: 300;
        font-size: 1.1em;
        padding: 25px 25px 25px 80px;
        margin: 10px auto;
        height: 30px;
        z-index: 9;
        cursor: pointer;
        -webkit-transition: all 0.25s linear;
    }
    ul li:hover label{
        color: #FFFFFF; /* color hover text*/
    }
    ul li .check{
        display: black;
        position: absolute;
        border: 5px solid #707070; /* color non-select*/
        border-radius: 100%;
        height: 20px;
        width: 20px;
        top: 30px;
        left: 30px;
        z-index: 5;
        transition: border .25s linear;
        -webkit-transition: border .25s linear;
    }
    ul li:hover .check {
        border: 5px solid #FFFFFF; /* color hover circle*/
    }
    ul li .check::before {
        display: block;
        position: absolute;
        content: '';
        border-radius: 100%;
        height: 10px;
        width: 10px;
        top: 5px;
        left: 5px;
        margin: auto;
        transition: background 0.25s linear;
        -webkit-transition: background 0.25s linear;
    }

    ul li .check2{
        display: black;
        position: absolute;
        border: 5px solid #707070; /* color non-select*/
        height: 10px;
        width: 10px;
        top: 30px;
        left: 30px;
        z-index: 5;
        transition: border .25s linear;
        -webkit-transition: border .25s linear;
    }
    ul li:hover .check2 {
        border: 5px solid #FFFFFF; /* color hover circle*/
    }
    ul li .check2::before {
        display: block;
        position: absolute;
        content: '';
        height: 5px;
        width: 5px;
        top: 2.5px;
        left: 2.5px;
        margin: auto;
        transition: background 0.25s linear;
        -webkit-transition: background 0.25s linear;
    }

    input[type=radio]:checked ~ .check {
        border: 5px solid rgb(65, 182, 230); /* color selected circle*/
    }
    input[type=radio]:checked ~ .check::before{
        background: rgb(65, 182, 230); /* color selected middle circle*/
    }
    input[type=radio]:checked ~ label{
        color: rgb(65, 182, 230); /* color selected text*/
    }

    input[type=checkbox]:checked ~ .check2 {
        border: 5px solid rgb(65, 182, 230); /* color selected circle*/
    }
    input[type=checkbox]:checked ~ .check2::before{
        background: rgb(65, 182, 230); /* color selected middle circle*/
    }
    input[type=checkbox]:checked ~ label{
        color: rgb(65, 182, 230); /* color selected text*/
    }
</style>
